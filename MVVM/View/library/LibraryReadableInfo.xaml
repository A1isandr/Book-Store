<UserControl x:Class="Book_Store.MVVM.View.LibraryReadableInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Book_Store.MVVM.View"
             Background="{StaticResource ViewBackgroundBrush}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Image Name="Cover"
           Grid.Row="0"
           Grid.Column="0"
           VerticalAlignment="Top"
           Source="{Binding Item.Cover}"
           Margin="10, 20, 0, 10">

            <Image.Effect>
                <DropShadowEffect
                Color="Black" 
                BlurRadius="20" 
                Opacity="0.5" 
                ShadowDepth="0"
                Direction="0"/>
            </Image.Effect>
        </Image>

        <ScrollViewer
            Grid.Row="0"
            Grid.Column="1"
            Margin="0, 20, 0, 0"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled">

            <Grid
            Margin="10, 10, 10, 0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Name="Author"
                    Grid.Row="0"
                    Margin="0, 0, 0, 20"
                    Style="{StaticResource InfoBorder}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Name="AuthorTextBlock"
                           Grid.Column="0"
                           Text="Автор:"
                           FontFamily="/fnt/#Lobster"
                           HorizontalAlignment="Right"
                           Style="{StaticResource ReadableInfo}"/>

                        <TextBlock 
                           Grid.Column="1"
                           Text="{Binding Item.Author}"
                           Margin="20, 0, 0, 0"
                           Style="{StaticResource ReadableInfo}"/>
                    </Grid>
                </Border>

                <Border Name="Genre"
                    Grid.Row="1"
                    Margin="0, 0, 0, 20"
                    Style="{StaticResource InfoBorder}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Name="GenreTextBlock"
                           Grid.Column="0"
                           Text="Жанр:"
                           FontFamily="/fnt/#Lobster"
                           HorizontalAlignment="Right"
                           Style="{StaticResource ReadableInfo}"/>

                        <TextBlock 
                           Grid.Column="1"
                           Text="{Binding Item.Genre}"
                           Margin="20, 0, 0, 0"
                           Style="{StaticResource ReadableInfo}"/>
                    </Grid>
                </Border>

                <Border Name="PageArticleCount"
                    Grid.Row="2"
                    Margin="0, 0, 0, 20"
                    Style="{StaticResource InfoBorder}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Name="PageArticleCountTextBlock"
                           Grid.Column="0"
                           Text="Страниц/Статей:"
                           FontFamily="/fnt/#Lobster"
                           HorizontalAlignment="Right"
                           Style="{StaticResource ReadableInfo}"/>

                        <TextBlock 
                           Grid.Column="1"
                           Text="{Binding Item.PageArticleCount}"
                           Margin="20, 0, 0, 0"
                           Style="{StaticResource ReadableInfo}"/>
                    </Grid>
                </Border>

                <Border Name="Description"
                    Grid.Row="3"
                    Margin="0, 0, 0, 20"
                    Style="{StaticResource InfoBorder}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Name="DescriptionTextBlock"
                           Grid.Column="0"
                           Text="Описание:"
                           FontFamily="/fnt/#Lobster"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Style="{StaticResource ReadableInfo}"/>

                        <TextBlock 
                           Grid.Column="1"
                           Text="{Binding Item.Description}"
                           Margin="20, 0, 0, 0"
                           Style="{StaticResource ReadableInfo}"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="{StaticResource ViewBackgroundBrush}">

            <Border.Effect>
                <DropShadowEffect
                    Color="Black"
                    BlurRadius="20" 
                    Opacity="0.5" 
                    ShadowDepth="0"
                    Direction="0"/>
            </Border.Effect>

            <StackPanel Name="PurchaseButton"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0, 20, 0, 30">

                <Button Name="Delete"
                    Width="250"
                    Height="50"
                    Content="Удалить из библиотеки"
                    FontSize="20"
                    FontFamily="/fnt/#Lobster"
                    Panel.ZIndex="2"
                    Background="{StaticResource RefuseBrush}"
                    Style="{StaticResource CommonButton}"
                    Command="{Binding DeleteFromLibraryCommand}">

                    <Button.Effect>
                        <DropShadowEffect
                            Color="#f75c5c"
                            BlurRadius="20" 
                            Opacity="0.5" 
                            ShadowDepth="0"
                            Direction="0"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
